@model DiceGame.Models.UserComment
@{
    ViewBag.Title = "GiveReviewUser";
}

<h2>GiveReviewUser</h2>

@using (Html.BeginForm("SaveReviewUser", "Game"))
{
   @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.User)
        @Html.TextBoxFor(m => m.User, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Comment)
        @Html.TextBoxFor(m => m.Comment, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("give rate from 5")
        @Html.TextBoxFor(m => m.rate, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Login</button>

}
