@model DiceGame.Models.GameComment
@{
    ViewBag.Title = "GiveReviewGmae";
}

<h2>GiveReviewGmae</h2>

@using (Html.BeginForm("SaveReviewGame", "Game"))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.GameId)
        @Html.TextBoxFor(m => m.GameId, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Comment)
        @Html.TextBoxFor(m => m.Comment, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("give rate from 5")
        @Html.TextBoxFor(m => m.rate, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">save</button>

}
