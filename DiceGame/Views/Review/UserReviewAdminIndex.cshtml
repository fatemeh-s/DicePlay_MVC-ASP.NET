@model IEnumerable<DiceGame.Models.UserComment>
@{
    ViewBag.Title = "UserReview";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<script src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<style>
    .checked {
        color: orangered
    }
</style>
<!------ Include the above in your HEAD tag ---------->
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>User Review</h3>
        </div><!-- /col-sm-12 -->
    </div><!-- /row -->
    <div class="row">

        @foreach (var item in Model)
        {
            <div class="col-sm-1">
                <div class="thumbnail">
                    <img class="img-responsive user-photo" src="https://ssl.gstatic.com/accounts/ui/avatar_2x.png">
                </div><!-- /thumbnail -->
            </div><!-- /col-sm-1 -->
            <div class="col-sm-5">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        @Html.DisplayFor(modelItem => item.CommenterUser) <span class="text-muted">commented 5 days ago</span>
                    </div>
                    <div class="panel-body">
                        <div class="rate">
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star"></span>
                            <span class="fa fa-star"></span>
                        </div>
                        @Html.DisplayFor(modelItem => item.Comment)

                    </div><!-- /panel-body -->
                    <div class="panel-footer">
                        <input type="button" value="accept" onclick="location.href='@Url.Action("UserAccept", "Review")?id=' + @item.Id" />
                        <input type="button" value="Decline" onclick="location.href='@Url.Action("UserDecline", "Review")?id=' + @item.Id" />
                        @*@using (Html.BeginForm("UserAccept", "Review"))
                        {
                            @Html.AntiForgeryToken()
                         
                            @Html.HiddenFor(model => item.Id)
                            <input type="submit" value="accept" class="btn btn-default" />
                           
                        }*@
                        @*@using (Html.BeginForm("UserAccept", "Review"))
                        {
                            <button type="submit" value="item.Id">Accept</button>
                        }

                        @using (Html.BeginForm("UserDecline", "ReviewController"))
                        {
                            <button type="submit" value="item.Id">Decline</button>
                        }*@
                        
                    </div><!-- /panel-footer -->
                </div><!-- /panel panel-default -->
            </div><!-- /col-sm-5 -->
        }



    </div><!-- /row -->
</div><!-- /container -->
